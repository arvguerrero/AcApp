<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AdminFinancials">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:background="@color/anzac" />

        <TextView
            android:id="@+id/financialTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/prompt_bold"
            android:text="Financial Report"
            android:textColor="@color/big_stone"
            android:textSize="24sp" />


        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:background="@color/anzac" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/prompt_bold"
            android:padding="5dp"
            android:text="Revenue"
            android:textColor="@color/big_stone"
            android:textSize="16sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/revenue"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:clickable="true" />

        <Button
            android:id="@+id/deleteRevenue"
            android:layout_marginTop="10dp"
            android:text="Delete revenue records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:layout_gravity="center"/>

        <View
            android:layout_width="240dp"
            android:layout_height="2dp"
            android:layout_marginTop="9dp"
            android:layout_gravity="end"
            android:background="@color/anzac" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/prompt_bold"
            android:padding="5dp"
            android:text="Expenses"
            android:textColor="@color/big_stone"
            android:textSize="16sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cost"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:clickable="true" />

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/deleteExpenses"
            android:text="Delete expenses records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:layout_gravity="center"/>

        <View
            android:layout_width="180dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="start"
            android:background="@color/anzac" />
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="12dp"
        android:src="@drawable/ic_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>