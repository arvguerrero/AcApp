<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FinancialActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/anzac"
            android:layout_marginBottom="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/financialTitle"
            android:text="Financial Report"
            android:fontFamily="@font/prompt_bold"
            android:textSize="24sp"
            android:textColor="@color/big_stone"
            android:layout_gravity="center"/>
        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/anzac"
            android:layout_marginTop="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revenue"
            android:textSize="14sp"
            android:padding="4dp"
            android:fontFamily="@font/prompt"
            android:textColor="@color/shark" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/revenue"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:clickable="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expenses"
            android:padding="4dp"
            android:textSize="14sp"
            android:fontFamily="@font/prompt"
            android:textColor="@color/shark" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cost"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/prompt_bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="4dp"
            android:text="Total Cashflow"
            android:textColor="@color/shark"
            android:textSize="12sp" />
        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/anzac" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prompt_bold"
                android:gravity="end"
                android:padding="4dp"
                android:text="Income"
                android:textColor="@color/big_stone"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/incomeNumber"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prompt"
                android:gravity="end"
                android:padding="4dp"
                android:text="0"
                android:textColor="@color/woodsmoke"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prompt_bold"
                android:gravity="end"
                android:padding="4dp"
                android:text="Expenses"
                android:textColor="@color/big_stone"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/expensesNumber"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prompt"
                android:padding="4dp"
                android:text="0"
                android:gravity="end"
                android:textColor="@color/woodsmoke"
                android:textSize="18sp" />
        </LinearLayout>
        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/anzac" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prompt_bold"
                android:gravity="end"
                android:padding="4dp"
                android:text="Profit"
                android:textColor="@color/big_stone"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/profitNumber"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prompt"
                android:gravity="end"
                android:padding="4dp"
                android:text="0"
                android:textColor="@color/woodsmoke"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>