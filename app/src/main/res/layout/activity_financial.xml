<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FinancialActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/anzac"
            android:layout_marginBottom="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/financialTitle"
            android:text="Financial Report"
            android:fontFamily="@font/prompt_bold"
            android:textSize="24sp"
            android:textColor="@color/big_stone"
            android:layout_gravity="center"/>
        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/anzac"
            android:layout_marginTop="3dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Revenue"
            android:textSize="16sp"
            android:padding="5dp"
            android:fontFamily="@font/prompt_bold"
            android:textColor="@color/big_stone" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/revenue"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:clickable="true" />
        <View
            android:layout_width="240dp"
            android:layout_height="2dp"
            android:layout_gravity="end"
            android:background="@color/anzac" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expenses"
                android:padding="5dp"
                android:textSize="16sp"
                android:fontFamily="@font/prompt_bold"
                android:textColor="@color/big_stone" />
            <TextView
                android:id="@+id/addExpense"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prompt"
                android:gravity="end"
                android:text="Add expense"
                android:textColor="@color/shuttle"
                android:textSize="14sp" />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cost"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:clickable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/prompt_bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="4dp"
            android:text="Total Cashflow"
            android:textColor="@color/shark"
            android:textSize="12sp" />
        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/anzac" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prompt_bold"
                android:gravity="end"
                android:padding="4dp"
                android:text="Income"
                android:textColor="@color/big_stone"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/incomeNumber"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prompt"
                android:gravity="end"
                android:padding="4dp"
                android:text="0"
                android:textColor="@color/woodsmoke"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prompt_bold"
                android:gravity="end"
                android:padding="4dp"
                android:text="Expenses"
                android:textColor="@color/big_stone"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/expensesNumber"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prompt"
                android:padding="4dp"
                android:text="0"
                android:gravity="end"
                android:textColor="@color/woodsmoke"
                android:textSize="18sp" />
        </LinearLayout>
        <View
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/anzac" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start">
            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prompt_bold"
                android:gravity="end"
                android:padding="4dp"
                android:text="Profit"
                android:textColor="@color/big_stone"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/profitNumber"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/prompt"
                android:gravity="end"
                android:padding="4dp"
                android:text="0"
                android:textColor="@color/woodsmoke"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/reload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_reload"
        android:layout_toLeftOf="@id/back"
        android:layout_alignParentBottom="true"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>