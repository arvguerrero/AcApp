<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="234dp"
            app:srcCompat="@drawable/logo" />
        <View
            android:layout_width="290dp"
            android:layout_height="2dp"
            android:background="@color/anzac"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_dashboard"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:background="@drawable/btn_home_left"
            android:fontFamily="@font/prompt_bold"
            android:text="Dashboards"
            android:textSize="20sp"
            android:layout_gravity="end" />
        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="@color/anzac"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="end"/>

        <Button
            android:id="@+id/btn_inventory"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:background="@drawable/btn_home_right"
            android:text="Inventory"
            android:layout_gravity="start"
            android:fontFamily="@font/prompt_bold"
            android:textSize="20sp"/>
        <View
            android:layout_width="310dp"
            android:layout_height="2dp"
            android:background="@color/anzac"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="start"/>

        <Button
            android:id="@+id/btn_financials"
            android:layout_width="312dp"
            android:layout_height="74dp"
            android:background="@drawable/btn_home_left"
            android:text="Financials"
            android:layout_gravity="end"
            android:fontFamily="@font/prompt_bold"
            android:textSize="20sp"/>
        <View
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:background="@color/anzac"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="end"/>

        <Button
            android:id="@+id/btn_profile"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:background="@drawable/btn_home_right"
            android:text="Profile"
            android:fontFamily="@font/prompt_bold"
            android:textSize="20sp"/>
        <View
            android:layout_width="180dp"
            android:layout_height="2dp"
            android:background="@color/anzac"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/txt_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
            android:fontFamily="@font/prompt"
            android:textSize="14sp"
            android:textColor="@color/shuttle"
            android:gravity="center"
            android:layout_gravity="center"/>
        <View
            android:layout_width="290dp"
            android:layout_height="2dp"
            android:background="@color/anzac"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>