<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AcApp_v_2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/big_stone</item>
        <item name="colorPrimaryVariant">@color/shuttle</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/periwinkle</item>
        <item name="colorSecondaryVariant">@color/polo</item>
        <item name="colorOnSecondary">@color/woodsmoke</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.AcApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/anzac</item>
        <item name="fullscreenTextColor">@color/white</item>
    </style>
</resources>